<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <!-- Banner Background -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/top_background">

        <!-- Profile Picture -->
        <ImageView
            android:id="@+id/profileImageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_placeholder_user"
            android:background="@drawable/profile"
            android:scaleType="centerCrop" />
    </FrameLayout>

    <!-- Name and Email -->
    <TextView
        android:id="@+id/profileNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:text="Lion Fischer"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/profileEmailTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="4dp"
        android:text="lionfischer@gmail.com"
        android:textSize="16sp"
        android:textColor="@color/gray" />

    <!-- Profile Options List -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginTop="16dp">

        <!-- My Reviews Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/myReviewsButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_background_1"
            android:drawableStart="@drawable/ic_1"
            android:drawablePadding="20dp"
            android:paddingStart="20dp"
            android:text="My Reviews"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAlignment="viewStart" />

        <!-- Account Settings Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/accountSettingsButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_background_1"
            android:drawableStart="@drawable/ic_2"
            android:drawablePadding="20dp"
            android:paddingStart="20dp"
            android:text="Account Settings"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAlignment="viewStart" />

        <!-- Personal Information Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/personalInfoButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_background_1"
            android:drawableStart="@drawable/ic_3"
            android:drawablePadding="20dp"
            android:paddingStart="20dp"
            android:text="Personal Information"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAlignment="viewStart" />

        <!-- Personal Information Section (Initially Hidden) -->
        <LinearLayout
            android:id="@+id/personalInfoLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:visibility="gone">

            <EditText
                android:id="@+id/emailEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:text="lionfischer@gmail.com"
                android:inputType="textEmailAddress"
                android:layout_marginBottom="10dp" />

            <EditText
                android:id="@+id/phoneEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/phone"
                android:text="@string/_84_123456789"
                android:inputType="phone"
                android:layout_marginBottom="10dp" />

            <Button
                android:id="@+id/saveButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/save"
                style="@style/OnyxButtonStyle"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>

        <!-- Notification Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/notificationButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_background_1"
            android:drawableStart="@drawable/ic_4"
            android:drawablePadding="20dp"
            android:paddingStart="20dp"
            android:text="@string/notification"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAlignment="viewStart" />

        <!-- Fingerprint Settings Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/fingerprintSettingsButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_background_1"
            android:drawableStart="@drawable/ic_5"
            android:drawablePadding="20dp"
            android:paddingStart="20dp"
            android:text="@string/fingerprint_settings"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAlignment="viewStart" />

        <!-- Logout Button -->
        <Button
            android:id="@+id/logoutButton"
            style="@style/OnyxButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="@string/logout"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>
</LinearLayout>
